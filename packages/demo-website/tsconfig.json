{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "composite": true,
    "isolatedModules": false,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "grapes": ["../grapes/src"],
      "grapes/*": ["../grapes/src/*"],
      "~/*": ["./src/*"]
    }
  },
  "includes": ["src"],
  "references": [
    { "path": "../grapes/tsconfig.build.json" }
  ]
}
